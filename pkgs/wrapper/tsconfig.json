{
  "exclude": [
    "build"
  ],
  "include": [
    "./src/**/*",
    "../../../../res/config.json"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}